<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/groups_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="DD 2  SC 1"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reveal_fleet_button" />

    <Button
        android:id="@+id/reveal_fleet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Reveal fleet"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/remove_fleet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Fleet"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/reveal_fleet_button"
        app:layout_constraintStart_toStartOf="@+id/reveal_fleet_button"
        app:layout_constraintTop_toBottomOf="@+id/reveal_fleet_button" />

    <TextView
        android:id="@+id/fleet_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGULAR FLEET 1"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/reveal_fleet_button"
        app:layout_constraintBottom_toBottomOf="@+id/reveal_fleet_button"
        app:layout_constraintLeft_toLeftOf="@+id/groups_text"
        app:layout_constraintStart_toStartOf="@+id/groups_text" />
</android.support.constraint.ConstraintLayout>

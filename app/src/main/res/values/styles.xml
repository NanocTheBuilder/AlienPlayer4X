<resources>

    <style name="SmallerText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/SmallerTextSize</item>
    </style>

    <style name="NormalText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/NormalTextSize</item>
    </style>

    <style name="NormalWhiteText" parent="NormalText">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="LargerText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/LargerTextSize</item>
    </style>

    <style name="MainMenuItem" parent="LargerText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SE4XCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/NormalTextSize</item>
        <item name="android:button">@drawable/checkbox_blue_white</item>
    </style>

    <style name="SE4XButton" parent="Widget.AppCompat.Button">
        <item name="background">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/SmallerTextSize</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StartButton" parent="SE4XButton">
        <item name="android:textSize">@dimen/NormalTextSize</item>
    </style>
</resources>
